@page "/users"
@using Aurora.Features.User.GetUsers
@using Aurora.Interfaces
@using MediatR

@inject IMediator mediator

<PageTitle>Users</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Users</MudText>
@if (!Model.Any())
{
    <MudProgressCircular Color="Color.Default" Indeterminate="true" />
}
else
{
    <MudTable Items="Model" Hover="true" SortLabel="Sort By" Elevation="0">
        <HeaderContent>
            <MudTh><MudTableSortLabel InitialDirection="SortDirection.Ascending" SortBy="new Func<UserRecord, object>(x=>x.Id)">Date</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<UserRecord, object>(x=>x.Name)">Username</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<UserRecord, object>(x=>x.Email)">Email</MudTableSortLabel></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Date">@context.Id</MudTd>
            <MudTd DataLabel="Temp. (C)">@context.Name</MudTd>
            <MudTd DataLabel="Temp. (F)">@context.Email</MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager PageSizeOptions="new int[]{50, 100}" />
        </PagerContent>
    </MudTable>
}


@code {
    private IList<UserRecord> Model { get; set; } = new List<UserRecord>();
    protected override async Task OnInitializedAsync()
    {

        var response = await mediator.Send(new GetUsersQuery());
        if (response.Success)
        {
            Model = response.Users;
        }
    }
}
